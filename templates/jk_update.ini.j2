# {{ ansible_managed }}
{% if jk_update is defined %}
{%   for update in jk_update %}
{%     if update.path is defined %}
[{{ update.path }}]
{%       if update.directories is defined %}
directories = {{ update.directories|sort|join(', ') }}
{%       endif %}
{%       if update.hardlinks is defined %}
hardlinks = {{ update.hardlinks }}
{%       endif %}
{%       if update.skips is defined %}
skips = {{ update.skips|sort|join(', ') }}
{%       endif %}
{%     endif %}

{%   endfor %}
{% endif %}
